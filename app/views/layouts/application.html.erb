<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>HugoLnx::Blog beta</title>
    <%= include_stylesheets :all_minified %>
    <%= favicon_link_tag %>
    <%= csrf_meta_tag %>
  </head>
  
  <body>

    <div id="all">

      <div id="header" class='box'>
        <a href="/"><div id="banner"></div></a>
        <center style="opacity:0.3;color:#f0f">Em Produção</center>
        <div id="slider"></div>
        <div id="slider_subtitle">
          <span id="title"></span>
          <span id="notice"><%=I18n.t :drag_it_to_roll_from_posts%></span>
        </div>
      </div>
      

      <div id="middle">
        <div id="upcontents">
          <a href="mailto:hugo.roque@caelum.com.br"><div class="icon" id="email_image"></div></a>
          <a href="http://github.com/hugolnx"><div class="icon" id="github_image"></div></a>
          <a href="http://twitter.com/hugolnx"><div class="icon" id="twitter_image"></div></a>
          <a href="/feed.rss"><div class="icon" id="rss_image"></div></a>
        </div>
        <div id="contents"><%= yield %></div>
      </div>

      <div id="creative_commons" class='box'>
        <%=render 'layouts/creative_commons'%>
      </div>

    </div>
    <%= include_javascripts :all_minified %>

    <%= javascript_tag do %>
      var id_max = <%=@id_max%>;
      var id = <%=@post.id%>;
      var titles = <%=raw @titles%>;
      i18n = <%=raw YAML.load_file(I18n.load_path.find{|path| path.include? I18n.locale.to_s})[I18n.locale.to_s].to_json%>;
    <%end%>
    <%= yield :javascript %>

  </body>
</html>
