<% content_for :javascript do %>
  <%= javascript_tag do %>
    reloadCommentsIndex();
  <%end%>
  <script type="text/javascript">
    window.___gcfg = {lang: 'pt-BR'};
  </script>
<%end%>
<%= javascript_tag do %>
  if (window.reloadCommentsIndex != null) reloadCommentsIndex();
<%end%>

<div id="post" class="top">
  <div id="post-social">
    <ul class="left-aligned">
      <li><a href="http://twitter.com/share?lang=pt-BR" class="twitter-share-button"></a></li>
      <li><div class="g-plusone" data-size="medium" data-annotation="bubble" data-width="130px"></div></li>
      <li><iframe src="http://www.facebook.com/plugins/like.php?app_id=169086613168321&href&send=false&layout=button_count&width=130&show_faces=true&action=like&colorscheme=light&font&height=21" scrolling="no" frameborder="0" style="border:none; overflow:visible; width:130px; height:21px;" allowTransparency="true"></iframe></li>
    </ul>
  </div>

  <div id="post-title" class="top-title">
    <h1><%= @post.title %></h1>
  </div>

  <div id="post-content">
    <%= render :inline => @post.body_with_syntax_highlighting %>
  </div>


  <div id="post-date">
    <span>Criado em: <%= @post.creation_date.to_s :portuguese %></span>
    <% unless @post.last_modification_date.nil? %>
      <span>&Uacute;ltima Atualiza&ccedil;&atilde;o em: <%= @post.last_modification_date.to_s :portuguese %></span>
    <%end%>
  </div>

  <div id="post-related">
    <ul class="left-aligned">
      <span>Postagens relacionadas:</span>
      <li><a href="#">Post qualquer número 1</a></li>
      <li><a href="#">Post qualquer número 2</a></li>
      <li><a href="#">Post qualquer número 3</a></li>
    </ul>
  </div>
</div>

<div id="post-comments" class="top">
  <div id="post-comments-title" class="top-title">
    <h1>Comentários</h1>
  </div>

  <div id="post-comments-content">
    <%= @comments.empty? ? "Esse post nao foi comentado ainda" : render(@comments) %>
  </div>

</div>

<div id="commentForm" class="top">
  <div id="commentForm-title" class="top-title">
    <h1>Deixe seu Comentário</h1>
  </div>

  <div id="commentForm-content">
    <%= render "comments/form" %>
    <% if current_user %>
      <a href="/signout" id="signoutTwitter" style="display:block"><%= I18n.t :sign_out_from_twitter %></a></br>
    <%else%>
      <a href="/auth/twitter/"><%= I18n.t :sign_in_twitter_to_comment %></a>
    <%end%>
  </div>
</div>
